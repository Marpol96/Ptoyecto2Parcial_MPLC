<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Traga_Monedas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/text_Points"
        android:layout_width="79dp"
        android:layout_height="33dp"
        android:layout_marginTop="84dp"
        android:text="@string/text_Points"
        app:layout_constraintBottom_toTopOf="@+id/Vista1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571"
        tools:text="@string/text_Points" />

    <TextView
        android:id="@+id/text_Credito"
        android:layout_width="79dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="71dp"
        android:layout_marginBottom="48dp"
        android:text="@string/text_Credito"
        app:layout_constraintBottom_toTopOf="@+id/Vista2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:text="@string/text_Credito" />

    <TextView
        android:id="@+id/text_Puntuacion"
        android:layout_width="79dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="71dp"
        android:layout_marginBottom="48dp"
        android:text="@string/text_Puntuacion"
        app:layout_constraintBottom_toTopOf="@+id/Vista2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:text="@string/text_Puntuacion" />

    <TextView
        android:id="@+id/text_Credit"
        android:layout_width="79dp"
        android:layout_height="33dp"
        android:layout_marginTop="84dp"
        android:text="@string/text_Credit"
        app:layout_constraintBottom_toTopOf="@+id/Vista1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/text_Points"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571"
        tools:text="@string/text_Credit" />

    <ImageView
        android:id="@+id/Vista1"
        android:layout_width="128dp"
        android:layout_height="135dp"
        android:layout_marginStart="4dp"
        android:contentDescription="@string/Vista1"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.282"
        app:srcCompat="@mipmap/ic_launcher"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/Vista3"
        android:layout_width="128dp"
        android:layout_height="135dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="@string/Vista3"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.990"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.282"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/Vista2"
        android:layout_width="128dp"
        android:layout_height="135dp"
        android:layout_marginTop="130dp"
        android:contentDescription="@string/Vista2"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/Button_Play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.231"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:visibility="visible" />

    <Button
        android:id="@+id/Button_Play"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="324dp"
        android:text="@string/Button_Play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.2" />

    <EditText
        android:id="@+id/text_Apuesta"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:autofillHints="@string/text_Apuesta"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/text_Apuesta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.657"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.700"
        tools:text="@string/text_Apuesta"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_apuesta"
        android:layout_width="79dp"
        android:layout_height="33dp"
        android:text="@string/text_Apuesta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.376"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.707"
        tools:text="@string/text_Apuesta" />

</androidx.constraintlayout.widget.ConstraintLayout>